  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["CI"],
  "globalPassThroughEnv": ["CI"],
  "tasks": {
    "typecheck": {},
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "drc#test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "@drc/app#test": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  }
}
